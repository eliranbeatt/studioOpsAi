# Test Environment Configuration

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/studioops_test

# Testing flag
TESTING=True

# Langfuse (Observability)
LANGFUSE_SECRET_KEY=test-secret-key-1234567890
LANGFUSE_PUBLIC_KEY=test-public-key-1234567890
LANGFUSE_HOST=http://localhost:3000

# OpenAI
OPENAI_API_KEY=test-openai-api-key-1234567890
OPENAI_ORG_ID=test-org-id

# Trello
TRELLO_API_KEY=test-trello-api-key-1234567890
TRELLO_API_TOKEN=test-trello-api-token-1234567890

# Application
APP_ENV=test
APP_DEBUG=True
APP_HOST=localhost
APP_PORT=8000

# Security
SECRET_KEY=test-secret-key-for-jwt-tokens-1234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./test_uploads

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Celery (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
