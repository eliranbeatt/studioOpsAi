# StudioOps AI Environment Configuration Template
# Copy this file to .env and configure with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://studioops:studioops123@localhost:5432/studioops
# Format: postgresql://username:password@host:port/database_name

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# API server host and port
API_HOST=127.0.0.1
API_PORT=8003
API_WORKERS=1

# Enable/disable API features
API_CORS_ENABLED=true
API_DEBUG_MODE=false
API_RELOAD=false

# Request timeout and limits
API_REQUEST_TIMEOUT=30
API_MAX_REQUEST_SIZE=10485760  # 10MB
API_RATE_LIMIT=100  # requests per minute

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Trello Integration
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_API_TOKEN=your_trello_api_token_here
TRELLO_DEFAULT_BOARD_ID=your_default_board_id_here

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=studioops
MINIO_SECRET_KEY=studioops123
MINIO_SECURE=false
MINIO_REGION=us-east-1

# MinIO Bucket Configuration
MINIO_DOCUMENTS_BUCKET=documents
MINIO_UPLOADS_BUCKET=uploads
MINIO_EXPORTS_BUCKET=exports
MINIO_TEMP_BUCKET=temp

# =============================================================================
# OBSERVABILITY AND MONITORING
# =============================================================================

# Langfuse for LLM observability
LANGFUSE_HOST=https://your-langfuse-host.com
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/studioops.log
LOG_MAX_FILE_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication (if implemented)
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_ALLOWED_HOSTS=localhost,127.0.0.1
API_RATE_LIMIT_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:8003
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================

# Development flags
DEVELOPMENT_MODE=true
DEBUG_ENABLED=true
MOCK_SERVICES_ENABLED=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://studioops:studioops123@localhost:5432/studioops_test
TEST_SKIP_EXTERNAL_SERVICES=true

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================

# Production flags (set these in production)
# DEVELOPMENT_MODE=false
# DEBUG_ENABLED=false
# API_RELOAD=false
# LOG_LEVEL=WARNING

# Production database with connection pooling
# DATABASE_URL=postgresql://user:pass@prod-host:5432/studioops?sslmode=require&pool_size=20

# Production API configuration
# API_WORKERS=4
# API_CORS_ENABLED=false
# API_RATE_LIMIT=1000

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# OCR Service (Tesseract)
TESSERACT_CMD=tesseract  # Path to tesseract executable
OCR_LANGUAGES=eng,heb

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@studioops.ai

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check intervals (in seconds)
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Service availability timeouts
DATABASE_HEALTH_TIMEOUT=5
MINIO_HEALTH_TIMEOUT=5
TRELLO_HEALTH_TIMEOUT=10
OPENAI_HEALTH_TIMEOUT=15