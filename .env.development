# StudioOps AI Development Environment Configuration
# This file contains development-optimized settings for local development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://studioops:studioops123@localhost:5432/studioops

# Development database settings (smaller pool, more verbose logging)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=15
DB_POOL_RECYCLE=1800

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=127.0.0.1
API_PORT=8003
API_WORKERS=1

# Development API features
API_CORS_ENABLED=true
API_DEBUG_MODE=true
API_RELOAD=true

# Relaxed limits for development
API_REQUEST_TIMEOUT=60
API_MAX_REQUEST_SIZE=52428800  # 50MB for large test files
API_RATE_LIMIT=1000  # Higher limit for development

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# OpenAI API (use your development key)
OPENAI_API_KEY=your_dev_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo  # Cheaper model for development
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Trello Integration (optional for development)
TRELLO_API_KEY=your_dev_trello_api_key_here
TRELLO_API_TOKEN=your_dev_trello_api_token_here
TRELLO_DEFAULT_BOARD_ID=your_dev_board_id_here

# Local MinIO for development
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=studioops
MINIO_SECRET_KEY=studioops123
MINIO_SECURE=false
MINIO_REGION=us-east-1

# MinIO Bucket Configuration
MINIO_DOCUMENTS_BUCKET=dev-documents
MINIO_UPLOADS_BUCKET=dev-uploads
MINIO_EXPORTS_BUCKET=dev-exports
MINIO_TEMP_BUCKET=dev-temp

# =============================================================================
# OBSERVABILITY AND MONITORING
# =============================================================================

# Langfuse (optional for development)
# LANGFUSE_HOST=https://cloud.langfuse.com
# LANGFUSE_PUBLIC_KEY=your_dev_langfuse_public_key
# LANGFUSE_SECRET_KEY=your_dev_langfuse_secret_key

# Development logging
LOG_LEVEL=DEBUG
LOG_FORMAT=human
LOG_FILE_PATH=logs/dev-studioops.log
LOG_MAX_FILE_SIZE=5242880  # 5MB
LOG_BACKUP_COUNT=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Development JWT (not secure, for testing only)
JWT_SECRET_KEY=dev_jwt_secret_key_not_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=72  # Longer expiration for development

# Development CORS (allow all localhost ports)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
API_ALLOWED_HOSTS=localhost,127.0.0.1
API_RATE_LIMIT_ENABLED=false  # Disabled for development

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Development
NEXT_PUBLIC_API_URL=http://localhost:8003
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev_nextauth_secret_not_for_production

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================

# Development flags
DEVELOPMENT_MODE=true
DEBUG_ENABLED=true
MOCK_SERVICES_ENABLED=true  # Enable service mocking

# Testing Configuration
TEST_DATABASE_URL=postgresql://studioops:studioops123@localhost:5432/studioops_test
TEST_SKIP_EXTERNAL_SERVICES=true

# Development features
ENABLE_API_DOCS=true
ENABLE_PROFILING=true
ENABLE_MOCK_DATA=true

# =============================================================================
# OPTIONAL SERVICES (Development)
# =============================================================================

# OCR Service (may not be installed in development)
TESSERACT_CMD=tesseract
OCR_LANGUAGES=eng

# Email Service (use mock or testing service)
SMTP_HOST=localhost
SMTP_PORT=1025  # MailHog or similar testing service
SMTP_USER=dev@studioops.local
SMTP_PASSWORD=dev_password
SMTP_FROM_EMAIL=dev-noreply@studioops.local

# Redis (optional for development)
REDIS_URL=redis://localhost:6379/1  # Use different database
REDIS_PASSWORD=

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# More frequent health checks for development
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=2

# Shorter timeouts for faster feedback
DATABASE_HEALTH_TIMEOUT=3
MINIO_HEALTH_TIMEOUT=3
TRELLO_HEALTH_TIMEOUT=5
OPENAI_HEALTH_TIMEOUT=10

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable development tools
ENABLE_HOT_RELOAD=true
ENABLE_DEV_MIDDLEWARE=true
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false  # Set to true for database debugging